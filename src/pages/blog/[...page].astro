---
import Layout from '@/layouts/layout.astro'
import Pagination from '@/components/pagination.astro'
import { rush, getCollectionId } from "@/lib/rush"
import { rushConfig } from "../../../rush.config"
import type { CmsEntry } from '@/types/rush'

export async function getStaticPaths({ paginate }: { paginate: Function }) {
    try {
        const collectionId = getCollectionId('/blog')
        const response = await rush.getEntries(collectionId, { limit: 1000 })
        const items = (response as { data?: CmsEntry[] }).data || []
        return paginate(items, { pageSize: rushConfig.defaults.perPage || 12 })
    } catch (e) {
        console.error('Failed to fetch blog entries:', e)
        return paginate([], { pageSize: rushConfig.defaults.perPage || 12 })
    }
}

const { page } = Astro.props as { page: { currentPage: number; lastPage: number; data: CmsEntry[]; url: { prev?: string; next?: string } } }
const pageTitle = page.currentPage > 1 ? `Blog - Página ${page.currentPage}` : 'Blog'
const pageDescription = page.currentPage > 1 ? `Confira os artigos do blog do Colégio Imperatrice - Página ${page.currentPage} de ${page.lastPage}` : 'Confira os últimos artigos do blog do Colégio Imperatrice'
---

<Layout title={pageTitle} description={pageDescription}>
    <div class="container mx-auto px-4 py-8 md:py-16">
        <div class="max-w-4xl mx-auto text-center mb-12">
            <h1 class="text-3xl md:text-5xl font-bold text-[#009640] mb-4 uppercase tracking-tight">Blog</h1>
            <p class="text-gray-600 text-lg">Acompanhe nossas notícias e novidades.</p>
        </div>


        {page.data.length === 0 ? (
            <div class="text-center py-20 bg-gray-50 rounded-xl border-dashed border-2 border-gray-200">
                <p class="text-gray-500 text-lg">Nenhum post encontrado no momento.</p>
            </div>
        ) : (
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
                {page.data.map((item: any) => (
                    <article class="bg-white rounded-2xl shadow-sm hover:shadow-2xl transition-all duration-300 border border-gray-100 flex flex-col h-full group overflow-hidden">
                        <a href={`/blog/${item.slug}`} class="block aspect-video overflow-hidden relative bg-[#009640]">
                            {item.featured_image ? (
                                <div class="w-full h-full relative">
                                     <img 
                                        src={item.featured_image.url} 
                                        alt={item.featured_image.alt || item.title} 
                                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110 opacity-90 group-hover:opacity-100"
                                    />
                                    <div class="absolute inset-0 bg-green-900/10 mix-blend-multiply group-hover:opacity-0 transition-opacity duration-500" />
                                </div>
                            ) : (
                                <div class="w-full h-full flex flex-col items-center justify-center relative overflow-hidden">
                                    <div class="absolute inset-0 opacity-10" 
                                         style="background-image: radial-gradient(circle at 1px 1px, white 1px, transparent 0); background-size: 20px 20px;">
                                    </div>
                                    <svg class="absolute bottom-0 right-0 w-32 h-32 text-green-800/20 transform translate-x-10 translate-y-10" viewBox="0 0 100 100" fill="currentColor">
                                        <circle cx="50" cy="50" r="50" />
                                    </svg>
                                    
                                    <div class="relative z-10 w-16 h-16 rounded-2xl bg-white/20 backdrop-blur-sm border border-white/30 flex items-center justify-center text-white mb-3 group-hover:scale-110 group-hover:bg-white group-hover:text-[#009640] transition-all duration-500 shadow-lg">
                                        <svg xmlns="http://www.w3.org/2000/svg" class="w-8 h-8" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 20H5a2 2 0 01-2-2V6a2 2 0 012-2h10a2 2 0 012 2v1m2 13a2 2 0 01-2-2V7m2 13a2 2 0 002-2V9a2 2 0 00-2-2h-2m-4-3H9M7 16h6M7 8h6v4H7V8z" />
                                        </svg>
                                    </div>
                                    <span class="relative z-10 text-xs font-black text-white uppercase tracking-widest border border-white/30 px-3 py-1 rounded-full bg-black/10 backdrop-blur-sm">Rush News</span>
                                </div>
                            )}
                            <div class="absolute top-4 left-4 bg-white/95 backdrop-blur-sm px-3 py-1.5 rounded-lg shadow-lg text-xs font-bold text-[#009640] uppercase tracking-wide border border-gray-100">
                                {new Date(item.published_at || item.created_at).toLocaleDateString('pt-BR', { day: '2-digit', month: 'short', year: 'numeric' })}
                            </div>
                        </a>
                        
                        <div class="p-8 flex flex-col flex-1">
                            <h2 class="text-xl font-bold text-gray-900 mb-3 leading-snug group-hover:text-[#009640] transition-colors">
                                <a href={`/blog/${item.slug}`}>
                                    {item.title}
                                </a>
                            </h2>

                            <p class="text-gray-600 text-sm line-clamp-3 mb-6 flex-1 leading-relaxed">
                                {item.excerpt || "Leia mais sobre este assunto em nosso blog..."}
                            </p>

                            <a href={`/blog/${item.slug}`} class="inline-flex items-center text-[#009640] font-bold text-sm hover:underline mt-auto group/link">
                                Ler Mais
                                <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 ml-1 transition-transform group-hover/link:translate-x-1" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                </svg>
                            </a>
                        </div>
                    </article>
                ))}
            </div>
        )}

        <Pagination
            currentPage={page.currentPage}
            lastPage={page.lastPage}
            prevUrl={page.url.prev}
            nextUrl={page.url.next}
        />
    </div>
</Layout>
