import Layout from '../layouts/Layout.astro';
import { rushConfig } from "../../rush.config";
import { rush } from "@/lib/rush";

export async function getStaticPaths() {
    const paths = [];

    // Loop through each route config
    for (const [routePath, collectionId] of Object.entries(rushConfig.routes)) {
        // 1. Create the "Archive" (List) page for this route
        paths.push({
            params: { slug: routePath === '/' ? undefined : routePath.replace(/^\//, '') },
            props: { 
                type: 'archive', 
                collectionId,
                title: routePath 
            }
        });

        // 2. Fetch all entries for this collection to create detail pages
        try {
            const entriesKey = Array.isArray(collectionId) ? collectionId[0] : collectionId;
            // @ts-ignore
            const response = await rush.getEntries(entriesKey, { limit: 1000 });
            // @ts-ignore
            const items = response.data || [];

            for (const item of items) {
                const slugPath = routePath === '/' 
                    ? item.slug 
                    : `${routePath.replace(/^\//, '')}/${item.slug}`;

                paths.push({
                    params: { slug: slugPath },
                    props: {
                        type: 'entry',
                        collectionId,
                        item
                    }
                });
            }
        } catch (error) {
            console.error(`Error fetching entries for route ${routePath} (Collection ${collectionId}):`, error);
        }
    }

    return paths;
}

const { type, item, collectionId, title } = Astro.props;

let archiveItems = [];
if (type === 'archive') {
    const entriesKey = Array.isArray(collectionId) ? collectionId[0] : collectionId;
    try {
        // @ts-ignore
        const res = await rush.getEntries(entriesKey, { limit: 20 });
        // @ts-ignore
        archiveItems = res.data || [];
    } catch (e) {
        console.error("Failed to load archive items", e);
    }
}
---

<Layout title={item?.title || title || 'Imperatrice'}>
    <div class="max-w-4xl mx-auto p-8">
        {type === 'archive' && (
            <div>
                <h1 class="text-3xl font-bold mb-6 text-gray-900">Archive (ID: {collectionId})</h1>
                <div class="grid gap-6 md:grid-cols-2">
                    {archiveItems.map((entry: any) => (
                        <a href={Astro.url.pathname.replace(/\/$/, '') + '/' + entry.slug} class="block bg-white rounded-lg shadow hover:shadow-md transition-shadow p-6">
                            <h2 class="text-xl font-semibold mb-2">{entry.title}</h2>
                            {entry.excerpt && <p class="text-gray-600">{entry.excerpt}</p>}
                        </a>
                    ))}
                </div>
            </div>
        )}

        {type === 'entry' && item && (
            <article class="prose lg:prose-xl bg-white p-8 rounded-lg shadow-sm">
                 <h1 class="text-4xl font-bold mb-4">{item.title}</h1>
                 {item.featured_image && (
                     <img 
                        src={item.featured_image.url} 
                        alt={item.featured_image.name} 
                        class="w-full h-96 object-cover rounded-lg mb-8 shadow-lg"
                    />
                 )}
                 <div class="prose max-w-none" set:html={item.content}></div>
            </article>
        )}
    </div>
</Layout>
