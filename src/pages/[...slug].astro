---
import { rushConfig } from "../../rush.config";
import { rush } from "@/lib/rush";

export async function getStaticPaths() {
    const paths = [];

    // Loop through each route config
    for (const [routePath, collectionId] of Object.entries(rushConfig.routes)) {
        // 1. Create the "Archive" (List) page for this route
        // e.g. /blog
        paths.push({
            params: { slug: routePath === '/' ? undefined : routePath.replace(/^\//, '') },
            props: { 
                type: 'archive', 
                collectionId,
                title: routePath // You might want a better title mapping later
            }
        });

        // 2. Fetch all entries for this collection to create detail pages
        // e.g. /blog/my-post
        try {
            // Fetch all entries (we might need pagination loop if > 100, but for now simple)
            const entriesKey = Array.isArray(collectionId) ? collectionId[0] : collectionId; // Handle array case if needed
            // @ts-ignore
            const response = await rush.getEntries(entriesKey, { limit: 1000 });
            
            // @ts-ignore
            const items = response.data || [];

            for (const item of items) {
                const slugPath = routePath === '/' 
                    ? item.slug 
                    : `${routePath.replace(/^\//, '')}/${item.slug}`;

                paths.push({
                    params: { slug: slugPath },
                    props: {
                        type: 'entry',
                        collectionId,
                        item
                    }
                });
            }
        } catch (error) {
            console.error(`Error fetching entries for route ${routePath} (Collection ${collectionId}):`, error);
        }
    }

    return paths;
}

const { type, item, collectionId } = Astro.props;
---

<html lang="pt-BR">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>{item?.title || 'Imperatrice'}</title>
</head>
<body class="bg-gray-50 text-gray-900 font-sans">
    <div class="max-w-4xl mx-auto p-8">
        {type === 'archive' && (
            <div>
                <h1 class="text-3xl font-bold mb-6">Archive View (Collection {collectionId})</h1>
                <p>Listing entries needed here...</p>
                <pre class="bg-gray-200 p-4 rounded overflow-auto mt-4">
                    Wait for component implementation...
                </pre>
            </div>
        )}

        {type === 'entry' && item && (
            <div>
                 <h1 class="text-4xl font-bold mb-4">{item.title}</h1>
                 {item.featured_image && (
                     <img 
                        src={item.featured_image.url} 
                        alt={item.featured_image.name} 
                        class="w-full h-96 object-cover rounded-lg mb-8 shadow-lg"
                    />
                 )}
                 <div class="prose max-w-none" set:html={item.content}></div>
            </div>
        )}
    </div>
</body>
</html>
