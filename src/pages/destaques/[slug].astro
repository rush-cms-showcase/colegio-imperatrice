---
import Layout from '@/layouts/layout.astro';
import { rush } from "@/lib/rush";
import { rushConfig } from "../../../rush.config";
import MasonryGallery from '@/components/gallery/masonry-gallery.astro';

export async function getStaticPaths() {
    const collectionId = rushConfig.routes['/destaques'];
    // @ts-ignore
    const response = await rush.getEntries(collectionId, { limit: 1000 });
    // @ts-ignore
    const items = response.data || [];

    return items.map((item) => ({
        params: { slug: item.slug },
        props: { item },
    }));
}

const { item } = Astro.props;
---

<Layout title={item.title}>
    <article class="bg-white min-h-screen">
        {/* Hero / Header */}
        <div class="relative h-[50vh] min-h-[400px] w-full bg-gray-900 overflow-hidden">
            {item.featured_image ? (
                <div 
                    class="absolute inset-0 bg-cover bg-center opacity-60"
                    style={`background-image: url('${item.featured_image.url}')`}
                />
            ) : (
                <div class="absolute inset-0 bg-gradient-to-br from-[#009640] to-gray-900 opacity-80" />
            )}
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent" />
            
            <div class="container mx-auto px-4 h-full flex flex-col justify-end pb-12 relative z-10">
                <a href="/destaques" class="inline-flex items-center text-white/80 hover:text-white mb-6 uppercase tracking-wider text-sm font-medium transition-colors">
                    &larr; Voltar para Destaques
                </a>
                <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 leading-tight">
                    {item.title}
                </h1>
                <div class="flex items-center gap-4 text-white/90 text-lg">
                    <time datetime={item.published_at || item.created_at}>
                        {new Date(item.published_at || item.created_at).toLocaleDateString('pt-BR', { day: '2-digit', month: 'long', year: 'numeric' })}
                    </time>
                </div>
            </div>
        </div>

        {/* Content */}
        <div class="container mx-auto px-4 py-12 md:py-20">
            <div class="max-w-4xl mx-auto">
                <div class="prose prose-lg prose-green max-w-none text-gray-700 leading-relaxed mb-16">
                     <Fragment set:html={item.content} />
                </div>

                {/* Gallery */}
                {item.images && item.images.length > 0 && (
                    <div class="border-t border-gray-100 pt-16">
                        <h2 class="text-3xl font-bold text-[#009640] mb-8 text-center uppercase tracking-wide">Galeria de Fotos</h2>
                        <MasonryGallery 
                            images={item.images} 
                            galleryID={`gallery-${item.id}`} 
                        />
                    </div>
                )}
            </div>
        </div>
    </article>
</Layout>
