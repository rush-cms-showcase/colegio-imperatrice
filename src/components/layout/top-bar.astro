---
import Phone from '~icons/lucide/phone'
import WhatsApp from '~icons/fa-brands/whatsapp'
import Mail from '~icons/lucide/mail'
import Facebook from '~icons/fa-brands/facebook'
import Instagram from '~icons/fa-brands/instagram'
import type { NavItem } from '@/types/rush'
import { CONTACT } from '@/constants/contact'

interface Props {
    items?: NavItem[]
}

const { items = [] } = Astro.props
---

<div class="bg-[#f8f8f8] text-[#333333] text-xs py-3 md:py-2 border-b border-gray-100 block">
    <div class="container mx-auto px-4 flex justify-between items-center">
        <div class="flex items-center w-full md:w-auto justify-between md:justify-start md:gap-6">
            <div class="flex items-center gap-6 md:gap-6">
                 <a href={CONTACT.phone.link} class="flex items-center gap-1 hover:text-[#009640] transition-colors p-1 md:p-0" aria-label="Telefone">
                    <Phone width="16" height="16" />
                    <span class="hidden md:inline">{CONTACT.phone.display}</span>
                </a>
                <a href={CONTACT.whatsapp.link} class="flex items-center gap-1 hover:text-[#009640] transition-colors p-1 md:p-0" aria-label="WhatsApp">
                    <WhatsApp width="16" height="16" />
                    <span class="hidden md:inline">{CONTACT.whatsapp.display}</span>
                </a>
                <a href={`mailto:${CONTACT.email.general}`} class="flex items-center gap-1 hover:text-[#009640] transition-colors p-1 md:p-0" aria-label="Email">
                    <Mail width="16" height="16" />
                    <span class="hidden md:inline">{CONTACT.email.general}</span>
                </a>
            </div>

            <div class="h-4 w-px bg-gray-300 mx-2 hidden md:block" />

            <div class="flex items-center gap-6 md:gap-3">
                <a href={CONTACT.social.facebook} target="_blank" rel="noopener noreferrer" class="hover:text-[#009640] transition-colors p-1 md:p-0" aria-label="Facebook">
                     <Facebook width="16" height="16" />
                </a>
                <a href={CONTACT.social.instagram} target="_blank" rel="noopener noreferrer" class="hover:text-[#009640] transition-colors p-1 md:p-0" aria-label="Instagram">
                    <Instagram width="16" height="16" />
                </a>
            </div>
        </div>

        <div class="hidden md:flex items-center gap-6 font-semibold">
            {items.map((item) => (
                <a 
                    href={item.url} 
                    target={item.target}
                    class="hover:text-[#009640] transition-colors uppercase"
                >
                    {item.title}
                </a>
            ))}
        </div>
    </div>
</div>
