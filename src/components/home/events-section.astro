---
import { rush } from "@/lib/rush";
import { rushConfig } from "../../../rush.config";
import Calendar from '~icons/lucide/calendar';

const collectionId = rushConfig.routes['/eventos'];
let events = [];

try {
    const response = await rush.getEntries(collectionId, { perPage: 4 })
    // @ts-ignore
    events = response.data || [];
} catch (e) {
    console.error('Failed to fetch events', e);
}

if (events.length === 0) return;
---

<section class="w-full py-32 z-20">
    <div class="container mx-auto px-4">
        <div class="flex justify-center lg:justify-between flex-col lg:flex-row items-center lg:items-end mb-8">
            <h2 class="text-3xl lg:text-4xl font-bold text-[#009640]">
                Ãšltimos Eventos
            </h2>
            <div class="flex gap-4 items-center justify-center text-sm max-lg:mt-2">
                <span class="text-gray-500 tracking-wider font-medium max-lg:hidden">
                    Clique ao lado para
                </span>
                <a href="/eventos" class="uppercase bg-gray-200 px-4 py-2 rounded text-gray-600 font-bold hover:bg-gray-600 hover:text-white transition-colors">
                    Ver Todos
                </a>
            </div>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {events.map((event: any) => (
                <a
                    href={`/eventos/${event.slug}`}
                    class="group block"
                >
                    <div class="relative aspect-[16/9] rounded-2xl overflow-hidden mb-4 shadow-xl">
                        {event.featured_image ? (
                            <img
                                src={event.featured_image.url}
                                alt={event.title}
                                class="object-cover w-full h-full group-hover:scale-105 transition-transform duration-500"
                            />
                        ) : (
                            <div class="w-full h-full bg-gray-200 flex items-center justify-center text-gray-400">
                                <Calendar width="48" height="48" />
                            </div>
                        )}
                        <div class="absolute bottom-4 right-4 uppercase bg-black/50 backdrop-blur-sm text-white px-3 py-1 rounded-lg text-sm font-medium">
                            Veja o Evento
                        </div>
                    </div>
                    <h3 class="text-xl font-bold text-[#009640] group-hover:text-[#007a33] transition-colors">
                        {event.title}
                    </h3>
                </a>
            ))}
        </div>
    </div>
</section>
