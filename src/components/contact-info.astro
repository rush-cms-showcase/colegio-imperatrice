---
import IconMapPin from '~icons/lucide/map-pin';
import IconNavigation from '~icons/lucide/navigation';
import IconMessageCircle from '~icons/lucide/message-circle';
import IconFacebook from '~icons/lucide/facebook';
import IconInstagram from '~icons/lucide/instagram';
---

<div class="space-y-8 animate-fade-in slide-in-from-left-4 duration-700">
    <div class="bg-white p-8 rounded-2xl shadow-sm border border-gray-100 hover:shadow-md transition-shadow duration-300">
        <div class="flex items-start gap-4">
            <div class="bg-primary/10 p-3 rounded-xl shrink-0">
                <IconMapPin class="w-6 h-6 text-primary" />
            </div>
            <div>
                <h3 class="text-xl font-bold text-gray-900 mb-2">Nossa Localização</h3>
                <p class="text-gray-600 leading-relaxed">
                    R. Ilha Bela, 67 - Sumaré<br />
                    Caraguatatuba - SP, 11661-310
                </p>
            </div>
        </div>
    </div>

    {/* Map */}
    <div class="relative w-full h-80 rounded-2xl overflow-hidden shadow-sm border border-gray-100 group">
        <iframe
            title="Mapa de Localização"
            width="100%"
            height="100%"
            frameborder="0"
            scrolling="no"
            src="https://maps.google.com/maps?q=-23.619402,-45.4054758&z=17&output=embed"
            class="absolute inset-0 w-full h-full filter grayscale-20 group-hover:grayscale-0 transition-all duration-500"
        />
            <a 
            href="https://maps.app.goo.gl/HeUJm8yPcSMaAP5d6" 
            target="_blank" 
            rel="noopener noreferrer"
            class="absolute bottom-4 right-4 bg-white/90 backdrop-blur px-4 py-2 rounded-lg shadow-lg text-xs font-semibold text-gray-700 hover:bg-white transition-colors flex items-center gap-2"
        >
            <IconNavigation class="w-3 h-3" />
            Abrir no Maps
        </a>
    </div>

    {/* Actions */}
    <div class="grid grid-cols-1 sm:grid-cols-2 gap-4">
        <a
            href="https://maps.app.goo.gl/HeUJm8yPcSMaAP5d6"
            target="_blank"
            rel="noopener noreferrer"
            class="flex items-center justify-center gap-2 px-6 py-4 rounded-xl border-2 border-gray-200 text-gray-700 font-semibold hover:border-primary hover:text-primary hover:bg-green-50 transition-all duration-300 group"
        >
            <IconNavigation class="w-5 h-5 text-gray-400 group-hover:text-primary transition-colors" />
            Como chegar
        </a>
        
        <a
            href="https://wa.me/5512982942048" 
            target="_blank" 
            rel="noopener noreferrer"
            class="flex items-center justify-center gap-2 px-6 py-4 rounded-xl bg-primary text-white font-semibold hover:bg-primary-dark shadow-lg shadow-green-900/10 hover:shadow-green-900/20 hover:-translate-y-0.5 transition-all duration-300"
        >
            <IconMessageCircle class="w-5 h-5" />
            Whatsapp
        </a>
    </div>
        
        {/* Socials */}
        <div class="flex gap-4 pt-4 border-t border-gray-100">
        <a href="https://facebook.com/colegioimperatrice" target="_blank" rel="noopener noreferrer" class="bg-gray-50 p-3 rounded-lg text-gray-500 hover:text-primary hover:bg-green-50 transition-all">
            <IconFacebook class="w-5 h-5" />
        </a>
            <a href="https://instagram.com/colegioimperatrice" target="_blank" rel="noopener noreferrer" class="bg-gray-50 p-3 rounded-lg text-gray-500 hover:text-primary hover:bg-green-50 transition-all">
            <IconInstagram class="w-5 h-5" />
        </a>
        </div>
</div>
